{% extends "JAAppBundle:Game:layout.html.twig" %}

{% block title "New Game" %}

{% block content %}
    <h1>New game: {{ path('api_1_new_game') }}</h1>

    <hr/>

    {% if (form is defined) %}
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit">Submit</button>
        {{ form_end(form) }}
    {% endif %}
{% endblock %}
