{% extends "layout.html.twig" %}

{% block title %}{{ parent() }} - Get Games {% endblock %}

{% block content %}
    <h1>Get games: {{ path('api_1_get_games') }}</h1>

    <hr/>

    <p>Game Collection :</p>
    <ul>
        {% for game in games %}
            <li>
                <a href="{{ path('api_1_get_game', {slug: game.slug}) }}">
                    {{ game.name }}
                </a>
                <a href="{{ path('api_1_edit_game', {slug: game.slug}) }}">
                    [edit]
                </a>
                <a href="{{ path('api_1_remove_game', {slug: game.slug}) }}">
                    [remove]
                </a>
            </li>
        {% else %}
            <li>No games</li>
        {% endfor %}
    </ul>
{% endblock %}
