{% extends "JAAppBundle:User:layout.html.twig" %}

{% block title %}Users - {{ parent() }}{% endblock %}

{% block content %}
    <h1>Get users : {{ path('api_1_get_users') }}</h1>

    <hr/>

    <p>User Collection :</p>
    <ul>
        {% for user in users %}
            <li>
                <a href="{{ path('api_1_get_user', {username: user.username}) }}">
                    {{ user.username }}
                </a>
            </li>
        {% else %}
            <li>No users</li>
        {% endfor %}
    </ul>
{% endblock %}
